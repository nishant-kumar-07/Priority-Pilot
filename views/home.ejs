<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/dce956590c.js" crossorigin="anonymous"></script>
</head>
<body>
    <section id="heading">
        <div>
            <h1>
                TODO App
            </h1>
        </div>
    </section>
    <section id="option">
        <form action="/create-todo-list" method="post">
        <div id="content-container" >

            <div id="description" class="hover1">
                <label for="desc" class="text" >Description</label>
                <br>
                
               <!-- <input type="text" name = "description"  id="desc" required> -->
               <textarea onclick="resetBtn()" name="description" id="desc" cols="50" rows="4" placeholder="what you need to do?" style="width: 100%; border:none; font-size: 20px;" required></textarea>

            </div>
            <div id="category" class="hover1">
                <label for="cat-list" class="text" >Choose a category</label>
                <select name="category" id="cat-list" style="width: 60% ;height :60%;border: none;outline: none;font-size: 16px;" required>
                    <option value="personal" style="background-color: lightgray;">Personal</option>
                    <option value="work" style="background-color: lightgray;">Work</option>
                    <option value="school" style="background-color: lightgray;">School</option>
                    <option value="cleaning" style="background-color: lightgray;">Cleaning</option>
                    <option value="other" style="background-color: lightgray;">Other</option>
                </select>
            </div>
            <div id="date" class="hover1">
                <label for="timing" class="text">Date</label>
                <br>
                <input type="date" value="2017-06-01" name="date" id="timing" style="border: none;width:60%;height: 60%;outline: none;font-size: 20px;" required>

            </div>

        </div>

    


    </section>
    <section id="add-delete">
        <div id="add-delete-container">

            <div id="add">
            <button onmouseover="mouseOver()" type="submit" id="submit" style="margin-left:30%;outline: none;"  > 
                <a href="" style="color: white;margin-left: 1%;">
                <i class="fa-solid fa-plus"></i>
            </a></button>
            
            <!-- <a href="" style="color: white;">
                <i class="fa-solid fa-plus"></i>
            </a> -->

            </div>
            
            <!-- <div id="delete">
             <a href="/delete-list">
                
                <i class="fa-solid fa-trash-can" style="color: white;margin-left: 40%; margin-top: 5%;"></i>
            </a> -->

            </div> 

        </div>

    </section>
</form>
<main>
  
    <section id="display">
        <ul>
            <div class="task1" style="margin-top: -5%; display: flex; flex-direction: row; margin-bottom: 2%;">
                <button style="margin-left: -10% ; background-color: rgb(201, 70, 70);" id="ckeckbtn" onclick="del_mul()">Delete</button>
                <!-- <input type="submit" name="Delete" class="ckeckbtn" style="margin-left: -10% ;" value="abc"> -->
                <div class="attr" style="margin-left: 5%;">Date</div>
                <div class="attr" style="margin-left: 15%;">To Do</div>
                <div class="attr" style="margin-left: 25%;">category</div>
                <div class="attr" style="margin-left: 20%;">actions</div>
            </div>
        <% for(i of toDo){%>

            <div class="task" style="background-color: aliceblue;">
                <!-- <input type="checkbox" style="background-color: red; color: red;" > -->
               <form style="margin-left: -10%;">
                <input type="checkbox" value="<%= i._id%>" class="check">
               </form>
                <div id="date-display">
                
                        <i class="fa-solid fa-calendar-days"></i>
                        <%= i.date.toLocaleString().split(',')[0] %>
                    
                </div>
                <div class="content">
                   <input type="text" class="text1" value="<%= i.description %>"readonly>
                </div>
           
            <div id="category-display" style="background-color: rgb(75, 139, 118);">
              <%= i.category %>
            </div>
                <div class="actions">
                    <!-- <a href="/update-list/?id=<%= i._id %>"> -->
               <button class="edit" value="<%= i._id %>">Edit</button>
            <!-- </a> -->
               <!-- <button class="delete">delete</button> -->
               <div style="min-width: 20px;"></div>
                <a class="delete" href="/delete-list/?id=<%= i._id %>">
                    <i class="fa-solid fa-trash"></i>
                 </a>

                </div>

            </div>
            <!-- <a id="link" href="/update-list/?id=<%= i._id %>"></a> -->
            <form id="myform" action="/update-list" method="post">
                <input type="hidden" value="" name="description" id="update" >
                <input type="hidden" value="" name="id" id="update1" >

            </form>
            <form id="myform1" action="/delete-multiple" method="post"></form>
            
            
            <%}%>
        </ul>
    </section>
</main>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
<script  src="/home.js" ></script>
   
</body>
</html>